<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="table-responsive">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th scope="row"><strong><%= form.label :姓 %></strong></th>
          <td><%=form.text_field :last_name, id: :admin_customer_last_name, :class => 'form-control' %></td>
          <th scope="row"><strong><%= form.label :名 %></strong></th>
          <td><%=form.text_field :first_name, id: :admin_customer_first_name, :class => 'form-control' %></td>
        </tr>
        <tr>
          <th scope="row"><strong><%= form.label :セイ %></strong></th>
          <td><%=form.text_field :furigana_last_name, id: :admin_customer_furigana_last_name, :class => 'form-control' %></td>
          <th scope="row"><strong><%= form.label :メイ %></strong></th>
          <td><%=form.text_field :furigana_first_name, id: :admin_customer_furigana_first_name, :class => 'form-control' %></td>
        </tr>
        <tr>
          <th scope="row"><strong><%= form.label :性別 %></strong></th>
          <td><%=form.collection_select :gender, Select.where(content_id: "gender"), :return_text, :return_text %></td>
          <th scope="row"><strong><%= form.label :生年月日 %></strong></th>
          <td><%=form.date_field :birth, id: :admin_customer_birth, :class => 'form-control' %></td>
        </tr>
        <tr>
          <th scope="row"><strong><%= form.label :電話番号 %></strong></th>
          <td><%=form.text_field :home_phone, id: :admin_customer_home_phone, :class => 'form-control' %></td>
          <th scope="row"><strong><%= form.label :携帯電話 %></strong></th>
          <td><%=form.text_field :mobile_phone, id: :admin_customer_mobile_phone, :class => 'form-control' %></td>
        </tr>
        <tr>
          <th scope="row"><strong><%= form.label :郵便番号 %></strong></th>
          <td><%=form.number_field :postal_code, id: :postal_code, :class => 'form-control' %></td>
          <th scope="row"><strong><%= form.label :都道府県 %></strong></th>
          <td><%=form.text_field :prefecture, id: :prefecture, :class => 'form-control' %></td>
	    </tr>
        <tr>
          <th scope="row"><strong><%= form.label :市区町村 %></strong></th>
          <td><%=form.text_field :city, id: :city, :class => 'form-control' %></td>
          <th scope="row"><strong><%= form.label :番地 %></strong></th>
          <td><%=form.text_area :street, id: :street, :class => 'form-control' %></td>
        </tr>
        <tr>
          <th scope="row"><strong><%= form.label :メールアドレス %></strong></th>
          <td><%=form.text_area :email, id: :admin_customer_email, :class => 'form-control' %></td>
          <th scope="row">&nbsp;</th>
          <td>&nbsp;</td>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="actions">
    <%= form.submit  :更新, :class => 'btn btn-primary' %>
  </div>
<% end %>
