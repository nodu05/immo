<p id="notice"><%= notice %></p>

<h1>選択テーブル</h1>

<div class="table-responsive">
<table class="table table-condensed table-bordered sampletable">
  <thead style="background: #0082ad; color: #FFF;">
    <tr>
      <th>システムID</th>
      <th>項目</th>
      <th>No</th>
      <th>項目名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @selects.each do |select| %>
      <tr>
        <td><%= select.id %></td>
        <td><%= select.content_id %></td>
        <td><%= select.select_id %></td>
        <td><%= select.return_text %></td>
        <td><%= link_to '照会', select %></td>
        <td><%= link_to '修正', edit_select_path(select) %></td>
        <td><%= link_to '削除', select, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

