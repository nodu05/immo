  <div class="field form-inline">
    <%= form.label :No %>
    <%= form.number_field :select_id, id: :admin_select_select_id, :class => 'form-control' %>
  </div>

  <div class="field form-inline">
    <%= form.label :項目名 %>
    <%= form.text_area :return_text, id: :admin_select_return_text, :class => 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit :更新, :class => 'btn btn-primary' %>
  </div>
<% end %>
