<p id="notice"><%= notice %></p>

<h1>従業員情報</h1>

<div class="table-responsive">
<table class="table table-condensed table-bordered sampletable">
  <thead style="background: #0082ad; color: #FFF;">
    <tr>
      <th colspan="5">企業名</th>
      <th rowspan="3">照会<br>修正<br>削除</th>
    </tr>
    <tr>
      <th>フリガナ</th>
      <th>性別 / 生年月日</th>
      <th>電話</th>
      <th>携帯</th>
      <th>メール</th>
    </tr>
    <tr>
      <th>氏名</th>
      <th>従業者番号 / 宅建士</th>
      <th>証明書有効期間</th>
      <th colspan="2">住所</th>
    </tr>
  </thead>

  <tbody>
    <% @staffs.each do |staff| %>
      <tr>
        <th class="info" colspan="5"><%= staff.company.name %></th>
        <td><%= link_to '照会', staff %></td>
      </tr>
      <tr>
        <td><%= staff.furigana_last_name %> <%= staff.furigana_first_name %></td>
        <td><%= staff.gender %> / <%= staff.birth.to_s(:ymd) %></td>
        <td><%= staff.home_phone %></td>
        <td><%= staff.mobile_phone %></td>
        <td><%= staff.email %></td>
        <td><%= link_to '修正', edit_staff_path(staff) %></td>
      </tr>
      <tr>
        <td><%= staff.last_name %> <%= staff.first_name %></td>
        <td><%= staff.certificate_number %><%= ' / 宅建士' if staff.real_estate_notary %></td>
        <td><%= staff.start_certificate_lifetime %> / <%= staff.end_certificate_lifetime %></td>
        <td colspan="2"><%= staff.postal_code %> <%= staff.prefecture %><%= staff.city %><%= staff.street %></td>
        <td><%= link_to '削除', staff, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr><td colspan="4"></td></tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

