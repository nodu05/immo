<p id="notice"><%= notice %></p>

<h1>お客様情報</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>姓</th>
      <th>名</th>
      <th>セイ</th>
      <th>メイ</th>
      <th>性別</th>
      <th>生年月日</th>
      <th>電話番号</th>
      <th>携帯電話</th>
      <th>郵便番号</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th>番地</th>
      <th>メールアドレス</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_customers.each do |admin_customer| %>
      <tr>
        <td><%= admin_customer.last_name %></td>
        <td><%= admin_customer.first_name %></td>
        <td><%= admin_customer.furigana_last_name %></td>
        <td><%= admin_customer.furigana_first_name %></td>
        <td><%= admin_customer.gender %></td>
        <td><%= admin_customer.birth %></td>
        <td><%= admin_customer.home_phone %></td>
        <td><%= admin_customer.mobile_phone %></td>
        <td><%= admin_customer.postal_code %></td>
        <td><%= admin_customer.prefecture %></td>
        <td><%= admin_customer.city %></td>
        <td><%= admin_customer.street %></td>
        <td><%= admin_customer.email %></td>
        <td><%= link_to '照会', admin_customer %></td>
        <td><%= link_to '修正', edit_admin_customer_path(admin_customer) %></td>
        <td><%= link_to '削除', admin_customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

