<p id="notice"><%= notice %></p>

<h1>会社情報</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>会社名</th>
      <th>代表電話</th>
      <th>問い合わせ電話</th>
      <th>郵便番号</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th>市区町村以下住所</th>
      <th>メールアドレス</th>
      <th>宅建業免許番号</th>
      <th>営業開始時間</th>
      <th>営業終了時間</th>
      <th>定休日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_companies.each do |admin_company| %>
      <tr>
        <td><%= admin_company.name %></td>
        <td><%= admin_company.main_phone %></td>
        <td><%= admin_company.inquiry_phone %></td>
        <td><%= admin_company.postal_code %></td>
        <td><%= admin_company.prefecture %></td>
        <td><%= admin_company.city %></td>
        <td><%= admin_company.street %></td>
        <td><%= admin_company.email %></td>
        <td><%= admin_company.license_number %></td>
        <td><%= admin_company.open_time %></td>
        <td><%= admin_company.end_time %></td>
        <td><%= admin_company.regular_holiday %></td>
        <td><%= link_to '照会', admin_company %></td>
        <td><%= link_to '修正', edit_admin_company_path(admin_company) %></td>
        <td><%= link_to '削除', admin_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

