<h1>Admin Companies</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Main phone</th>
      <th>Inquiry phone</th>
      <th>Postal code</th>
      <th>Prefecture</th>
      <th>City</th>
      <th>Street</th>
      <th>Email</th>
      <th>License number</th>
      <th>Open time</th>
      <th>End time</th>
      <th>Regular holiday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_companies.each do |admin_company| %>
      <tr>
        <td><%= admin_company.name %></td>
        <td><%= admin_company.main_phone %></td>
        <td><%= admin_company.inquiry_phone %></td>
        <td><%= admin_company.postal_code %></td>
        <td><%= admin_company.prefecture %></td>
        <td><%= admin_company.city %></td>
        <td><%= admin_company.street %></td>
        <td><%= admin_company.email %></td>
        <td><%= admin_company.license_number %></td>
        <td><%= admin_company.open_time %></td>
        <td><%= admin_company.end_time %></td>
        <td><%= admin_company.regular_holiday %></td>
        <td><%= link_to 'Show', admin_company %></td>
        <td><%= link_to 'Edit', edit_admin_company_path(admin_company) %></td>
        <td><%= link_to 'Destroy', admin_company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

