<p id="notice"><%= notice %></p>

<h1>選択テーブル</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>システムID</th>
      <th>項目</th>
      <th>No</th>
      <th>項目名</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_selects.each do |admin_select| %>
      <tr>
        <td><%= admin_select.id %></td>
        <td><%= admin_select.content_id %></td>
        <td><%= admin_select.select_id %></td>
        <td><%= admin_select.return_text %></td>
        <td><%= link_to '照会', admin_select %></td>
        <td><%= link_to '修正', edit_admin_select_path(admin_select) %></td>
        <td><%= link_to '削除', admin_select, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

