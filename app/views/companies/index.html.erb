<p id="notice"><%= notice %></p>

<h1>会社情報</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>会社名</th>
      <th>代表電話</th>
      <th>問い合わせ電話</th>
      <th>郵便番号</th>
      <th>都道府県</th>
      <th>市区町村</th>
      <th>番地</th>
      <th>メールアドレス</th>
      <th>宅建業免許番号</th>
      <th>営業開始時間</th>
      <th>営業終了時間</th>
      <th>定休日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.main_phone %></td>
        <td><%= company.inquiry_phone %></td>
        <td><%= company.postal_code %></td>
        <td><%= company.prefecture %></td>
        <td><%= company.city %></td>
        <td><%= company.street %></td>
        <td><%= company.email %></td>
        <td><%= company.license_number %></td>
        <td><%= company.open_time %></td>
        <td><%= company.end_time %></td>
        <td><%= company.regular_holiday %></td>
        <td><%= link_to '照会', company %></td>
        <td><%= link_to '修正', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

