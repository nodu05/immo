<p id="notice"><%= notice %>

<h1>会社情報</h1>

<div class="table-responsive">
<table class="table table-condensed table-bordered sampletable">
  <thead style="background: #0082ad; color: #FFF;">
    <tr>
      <th colspan="3" scope="col">企業名</th>
      <th colspan="2" scope="col">免許番号</th>
      <th rowspan="3" scope="col">照会<br>修正<br>削除</th>
    </tr>
    <tr>
      <th scope="col">代表番号</th>
      <th scope="col">問い合わせ番号</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">営業時間</th>
      <th scope="col">定休日</th>
    </tr>
    <tr>
      <th scope="col" colspan="5">所在地</th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <th class="info" colspan="3"><%= company.name %></th>
        <td colspan="2"><%= company.license_number %></td>
        <td><%= link_to '照会', company %></td>
      </tr>
      <tr>
        <td><%= company.main_phone %></td>
        <td><%= company.inquiry_phone %></td>
        <td><%= company.email %></td>
        <td><%= company.open_time.to_s(:time) %> 〜 <%= company.end_time.to_s(:time) %></td>
        <td><%= company.regular_holiday %></td>
        <td><%= link_to '修正', edit_company_path(company) %></td>
      </tr>
      <tr>
        <td colspan="5"><%= company.postal_code %>　<%= company.prefecture %><%= company.city %><%= company.street %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr><td></td></tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to '追加', new_company_path %>
