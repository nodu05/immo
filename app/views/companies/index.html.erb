<h1>Companies</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Main phone</th>
      <th>Inquiry phone</th>
      <th>Postal code</th>
      <th>Prefecture</th>
      <th>City</th>
      <th>Street</th>
      <th>Email</th>
      <th>License number</th>
      <th>Open time</th>
      <th>End time</th>
      <th>Regular holiday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.main_phone %></td>
        <td><%= company.Inquiry_phone %></td>
        <td><%= company.postal_code %></td>
        <td><%= company.prefecture %></td>
        <td><%= company.city %></td>
        <td><%= company.street %></td>
        <td><%= company.email %></td>
        <td><%= company.license_number %></td>
        <td><%= company.open_time %></td>
        <td><%= company.end_time %></td>
        <td><%= company.regular_holiday %></td>
        <td><%= link_to 'Show', company %></td>
        <td><%= link_to 'Edit', edit_company_path(company) %></td>
        <td><%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

